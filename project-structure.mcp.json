{
  "name": "courseshub-project-structure",
  "version": "2.0.0",
  "description": "Model Context Protocol file documenting the Courseshub Online Courses & Education HTML Template structure with per-page optimization for MVC backend integration. This is an Arabic-first application with RTL (Right-to-Left) layout design.",
  "project": {
    "name": "Courseshub",
    "type": "Online Courses & Education Platform",
    "framework": "Vanilla HTML5, CSS3, JavaScript",
    "architecture": "Per-page optimized (MVC-ready) with advanced optimization layer",
    "buildSystem": "Custom Node.js + Bash scripts",
    "jquery": "3.7.1 (included in bundles)",
    "ssr": false,
    "seo": true,
    "primaryLanguage": "Arabic (ar)",
    "textDirection": "RTL (Right-to-Left)",
    "locale": "ar-SA"
  },
  "structure": {
    "root": "courseshub",
    "directories": {
      "root_scripts": {
        "path": "./",
        "description": "Advanced optimization scripts and one-off tools located in the root",
        "files": [
          "add-image-dimensions.js",
          "add-lazy-loading.js",
          "add-preloads.js",
          "add-srcset.js",
          "apply-arabic-nav.js",
          "convert-to-webp.js",
          "extract-inline-css.js",
          "fix-accessibility.js",
          "fix-arabic-content.js",
          "fix-cls.js",
          "fix-lcp.js",
          "fix-tbt-issues.js",
          "generate-responsive-images.js",
          "optimize-loading.js",
          "optimize-performance.js",
          "purge-css.js",
          "uniform-header.js",
          "update-branding.js",
          "update-image-refs.js"
        ]
      },
      "src": {
        "path": "src/",
        "description": "Source files for development (editable)",
        "subdirectories": {
          "css": {
            "pages": {
              "path": "src/css/pages/",
              "description": "Page-specific CSS files",
              "files": [
                "home.css",
                "about.css",
                "courses-grid.css",
                "courses-list.css",
                "courses-detail.css",
                "event-detail.css",
                "instructor.css",
                "instructor-detail.css",
                "pricing.css",
                "faq.css",
                "blog-grid.css",
                "blog-list.css",
                "blog-detail.css",
                "contact.css",
                "login.css",
                "register.css",
                "profile.css",
                "checkout.css",
                "video-detail.css",
                "404.css"
              ]
            }
          },
          "js": {
            "pages": {
              "path": "src/js/pages/",
              "description": "Page-specific JS files (readable, backend can modify)",
              "files": [
                "home.js",
                "about.js",
                "courses-grid.js",
                "courses-list.js",
                "courses-detail.js",
                "event-detail.js",
                "instructor.js",
                "instructor-detail.js",
                "pricing.js",
                "faq.js",
                "blog-grid.js",
                "blog-list.js",
                "blog-detail.js",
                "contact.js",
                "login.js",
                "register.js",
                "profile.js",
                "checkout.js",
                "video-detail.js",
                "404.js"
              ]
            }
          }
        }
      },
      "dist": {
        "path": "dist/",
        "description": "Build output - optimized for production",
        "generated": true,
        "subdirectories": {
          "css": {
            "bundles": {
              "path": "dist/assets/css/bundles/",
              "description": "Bundled and minified CSS per page",
              "pattern": "*.bundle.css",
              "example": "home.bundle.css contains all CSS needed for home page"
            }
          },
          "js": {
            "bundles": {
              "path": "dist/assets/js/bundles/",
              "description": "Bundled and minified JS libraries per page",
              "pattern": "*.bundle.js",
              "example": "home.bundle.js contains jQuery, Bootstrap, Swiper, WOW, Isotope for home page"
            },
            "pages": {
              "path": "dist/assets/js/pages/",
              "description": "Readable page logic (NOT minified) - backend can modify",
              "pattern": "*.js",
              "example": "home.js contains page initialization and custom logic"
            }
          }
        }
      },
      "assets": {
        "path": "assets/",
        "description": "Original asset files (Legacy source for common styles)",
        "subdirectories": {
          "css": {
            "path": "assets/css/",
            "files": [
              "style.css",
              "rtl-auth.css",
              "bootstrap.min.css",
              "swiper-bundle.min.css",
              "fontawesome.min.css",
              "animate.css",
              "fancybox.min.css",
              "jquery-ui.css",
              "fonts.css"
            ]
          },
          "js": {
            "path": "assets/js/",
            "files": [
              "jquery-3.7.1.min.js",
              "bootstrap.min.js",
              "swiper-bundle.min.js",
              "wow.min.js",
              "isotope.pkgd.min.js",
              "fancybox.min.js",
              "jquery-ui.min.js",
              "bg-moving.js",
              "back-to-top.js",
              "custom-scroll-count.js",
              "custom.js"
            ]
          }
        }
      },
      "scripts": {
        "path": "scripts/",
        "description": "Core build orchestration scripts",
        "files": [
          "generate-bundles.js",
          "minify-dist-css.js",
          "minify-dist-js.js",
          "purge-css.js",
          "sync-dist.js",
          "update-dist-html.js",
          "update-html-links.js"
        ]
      }
    }
  },
  "buildSystem": {
    "command": "npm run build",
    "alternativeCommand": "bash build.sh",
    "scripts": {
      "build": "Full production build pipeline via bash script",
      "generate-bundles": "Bundles raw CSS/JS from assets/ into dist/ per page",
      "purge-css": "Removes unused CSS using PurgeCSS based on dist/ HTML files",
      "sync-dist": "Synchronizes static assets to the dist folder",
      "minify-dist": "Runs minify-dist-css and minify-dist-js to compress output",
      "update-dist": "Updates HTML links in dist/ to point to the new bundles",
      "dist": "The full end-to-end production build shortcut",
      "optimize-all": "Runs the root-level optimize-performance.js script"
    },
    "perPageOptimization": {
      "enabled": true,
      "description": "Each page loads only CSS/JS it actually needs via per-page bundles",
      "cssStrategy": "Common assets + page-specific CSS bundled and minified per page",
      "jsStrategy": "Core libraries bundled per page + readable page logic kept separate"
    },
    "output": {
      "css": "dist/assets/css/bundles/*.bundle.css (minified)",
      "jsBundle": "dist/assets/js/bundles/*.bundle.js (minified)",
      "jsPage": "dist/assets/js/pages/*.js (readable for backend)"
    }
  },
  "advancedOptimizationLayer": {
    "description": "Post-build fixes for Core Web Vitals and accessibility",
    "scripts": {
      "CLS": "fix-cls.js, add-image-dimensions.js (Fixes layout shift)",
      "TBT": "fix-tbt-issues.js, optimize-loading.js (Reduces execution time)",
      "LCP": "fix-lcp.js, add-preloads.js (Speeds up largest paint element)",
      "Images": "convert-to-webp.js, add-srcset.js (Next-gen formats and responsiveness)",
      "Branding": "apply-arabic-nav.js, uniform-header.js, update-branding.js"
    }
  },
