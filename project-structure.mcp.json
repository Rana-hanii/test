  "mvcIntegration": {
    "description": "How to integrate with MVC backend",
    "workflow": {
      "step1": "Run 'npm run build' to generate dist/ folder",
      "step2": "Copy dist/assets/ to backend's wwwroot/ folder",
      "step3": "Backend creates Views (.cshtml) based on dist/*.html structure",
      "step4": "Backend references CSS/JS from wwwroot/"
    },
    "backendCanModify": {
      "jsPages": "dist/assets/js/pages/*.js - readable, add custom API calls here",
      "views": "Backend creates own Views, references assets from wwwroot/"
    },
    "backendCannotModify": {
      "cssBundles": "dist/assets/css/bundles/*.bundle.css - minified, don't edit",
      "jsBundles": "dist/assets/js/bundles/*.bundle.js - minified, don't edit"
    },
    "dynamicData": {
      "method1": "Data attributes in HTML - JS reads from DOM",
      "method2": "window.APP_CONFIG - Backend injects config object",
      "method3": "API endpoints - JS fetches data from backend"
    }
  },
